!!!
%html
  %head
    %title Angelhack
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = stylesheet_link_tag 'gmaps4rails'
    = csrf_meta_tags
  %body
    = render 'header'
    %div.container
      %div.row
        %div.span12
          - if flash.present?
            - flash.each do |key, message|
              - case key
              - when :success
                %p.alert{class: 'alert-success'}
                  = message
              - when :notice
                %p.alert{class: 'alert-success'}
                  = message
              - when :info
                %p.alert{class: 'alert-info'}
                  = message
              - else
                %p.alert
                  = message
          = yield
    = yield :scripts
