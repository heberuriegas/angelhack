%h1 Listing reports

%table
  %tr
    %th Name
    %th Content
    %th Latitude
    %th Longitude
    %th Gmaps
    %th
    %th
    %th

  - @reports.each do |report|
    %tr
      %td= report.name
      %td= report.content
      %td= report.latitude
      %td= report.longitude
      %td= report.gmaps
      %td= link_to 'Show', report
      %td= link_to 'Edit', edit_report_path(report)
      %td= link_to 'Destroy', report, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

  <%= gmaps("markers" => {"data" => @json, "options" => {"list_container" => "markers_list" } }) %>

= link_to 'New Report', new_report_path
